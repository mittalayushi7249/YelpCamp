<%- include('../partials/header') %>
<h1 style="text-align:center;margin-top: 100px;">Edit Campgrounds</h1>

    <div style="width: 30%;margin: 10px auto;">
        <form action="/campground/<%= foundCampground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="newcampground" value="<%= foundCampground.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" value="<%= foundCampground.image%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%= foundCampground.description%>">
            </div>
            <input class="form-control btn btn-primary" type="submit">
        </form>
        <a href="/campground">Go Back</a>

    </div>


<%- include('../partials/footer') %>